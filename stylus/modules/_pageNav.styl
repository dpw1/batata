/* VARIABLES - Variables used in this module.
========================================================================== */

$margin = 10px

/* STYLE - General styling for this module.
========================================================================== */

.pageNav
	width 100%
	margin $margin auto
	
.pageNav_wrapper
	text-align: center;
	
.pageNav_number
	font-size $font-size-xs
	font-weight $font-bold
	display inline-block
	width 26px
	height 26px
	line-height 26px
	border-radius 2px
	border 1px solid black
	background $background-light-4
	text-align center
	box-shadow 0px 1px 2px $background-light-2
	i
		font-size $font-size-xxxs