.starRatingClick input {
  position:absolute;
  top: -2em;
  clip:rect(0,0,0,0);
}
.starRatingClick {
  unicode-bidi: bidi-override;
  direction: rtl;
  text-align: center;
  border: 0;
  font-size: 0;
}
.starRatingClick label {
  font-size: 1.8rem;
  line-height: 32px; line-height: 2rem;
  display: inline-block;
  position: relative;
  text-align: center;
  width: 1.2em;
  height: 1em;
  overflow: hidden;
  text-indent: 100%;
  cursor: pointer;
  margin-right: -8px;
}
.starRatingClick label:before {
   content: "☆";
   position: absolute;
   top: 0; left: 0; right: 0; bottom: 0;
   text-indent: 0;
   line-height: 1em;
   color: #aaa;
}
.starRatingClick label:hover:before,
.starRatingClick label:hover ~ label:before,
.starRatingClick input:checked ~ label:before {
   content: "★";
   color: #ffbb04;
}
.starRatingClick label:active {
  position: relative;
  top: 1px;
}

.starRatingClick
	&.starRatingClick--sm
		label
			font-size 1.8rem
	&.starRatingClick--md
		label
			font-size 2.5rem
	&.starRatingClick--lg
		label
			font-size 1.8rem