/* VARIABLES - Variables used in this module.
========================================================================== */

$background = $white
$padding = 15px
/* STYLE - General styling for this module.
========================================================================== */

.me
	background lightblue

.user
	background $background
	width 100%
	margin 0 auto
	padding-top $padding
	margin-bottom 10px
	.user_pic
		display inline-block
		padding-left $padding
		float left
		border-radius 50%
	.user_info
		width 52%
		display inline-block
		margin-left 20px
		*
			display inline-block
			font-size $font-size-xxs	
	.user_name, .user_location
			width 100%
	.user_name
		a
			textHover($blue)

	.user_fullname > a
		textHover($background-light-3)
	.user_location
		margin-bottom 10px
	.user_detail
		font-weight $font-bold
		>span
			font-size $font-size-xxxs
			font-weight $font-normal
	.user_footer
		display block
		border-top 1px solid $background-light-2
		height auto
		padding 0 $padding
		margin-top 10px
		padding-bottom 5px
//		background lightgreen
		.starRating
			width 40%
			display inline-block
			float left
		.user_tags
			display inline-block
			width 40%
			padding-top 7px
			float right
			
			
+max-breakpoint(lg)
	.user_tags
		width auto