/* VARIABLES - Variables used in this module.
========================================================================== */

$input-height = 33px
$input-padding = 5px
$color = $background-light-3	

$hints-height = 245px
$margin-bottom = 15px




/* STYLE - General styling for this module.
========================================================================== */

.postActivity
	.postActivity_title, .postActivity_subtitle
		text-align center
	.postActivity_subtitle
		margin-bottom 50px

.postActivity_form
	border-radius 3px
	background white
	width 100%
	padding-left 20px
	padding-top 10px
	margin-bottom $margin-bottom 
.postActivity_inputBlock
	display inline-block
	margin-bottom $margin-bottom 

	position relative
	label
		display block
		width 100%
		font-weight $font-bold
		color $text-color-dark-3
	input, select
		line-height $input-height
	input, textarea, select
		width 90%
		height $input-height
		padding-left $input-padding
		border 1px solid $background-light-3
		margin-right 5px
	textarea
		height $input-height * 4
		resize none
	select
		width 89,5%
	i
		position relative
		top 7px	
		left 5px
		font-size $font-size-lg
		color lightblue
		display inline-block

	&:nth-child(1)
		width 100%
	&:nth-child(2)
		width 67%
		margin-right 20px
	&:nth-child(3)
		width 29%
		input
			width 69%
	&:nth-child(4)
		width 100%
		label
			margin-bottom 10px
		textarea
			width 91%
		i
			top -($input-height * 1.7)px
			
/* Post Activity Warnings */
.postActivity_hints
	background $white
	border-radius 3px
	padding 15px 25px
	margin-bottom $margin-bottom 

	h2
		margin-bottom 15px
	p
		margin-bottom 10px
	
	.postActivity_hints_list
		li
			text-align justify
			margin-bottom 10px
			i
				margin-right 15px
				
.postActivity_buttons
	margin-bottom 60px
	height auto
	background yellow
	width 100%
	position relative
	div
		position absolute
		right 0
		.postActivity_save
			custom_button (reject sm)
			margin-right 15px
		.postActivity_publish
			custom_button (standard sm)
		*
			width 120px
			float left
	
.--postActivity_file
	label
		&:nth-child(1)
			margin-bottom 10px
		&:nth-child(2)
			cursor pointer
			width 90px
			height 90px
			position relative
			display block
			border 1px solid $background-light-3
			overflow hidden
			padding-top 32px
			text-align center
	input
		opacity 0
		position absolute
		width 100%
		height 100%
		cursor pointer
		top 0px
		
.--postActivity_type
	display block
	.--postActivity_type_block
		input
			display inline-block
			width 5%	
			width 15px
			top 10px
		> label
			display inline-block
			width 94%
		> input:checked + label
			cursor default
		> input:nth-of-type(2):checked ~ .--postActivity_location
			display block
		>.--postActivity_location
			display none 
			clear left
			.--postActivity_location_block
				float left
				width 45%
				label
					width 90%
					display inline-block
					font-size $font-size-xxxs
				input:checked ~ .postActivity_inputBlock
					display none
				>.postActivity_inputBlock
					width 100%
					input
						width 83%
					i
						top 17px
/* BREAKPOINTS - Customizations for each specific breakpoint.
========================================================================== */
+max-breakpoint(lg)
	.postActivity_inputBlock
		&:nth-child(2)
			select
				width 89%
		&:nth-child(3)
			width 28%
	.--postActivity_location
		>.postActivity_inputBlock
			input
				width 86% !important
+max-breakpoint(xxs)
	.postActivity_inputBlock
		width 100% !important
		> input, > textarea, > select
			width 90% !important
	.--postActivity_location_block
		width 100% !important
	
+max-breakpoint(xxxs)
	.postActivity_inputBlock
		> input, > textarea, >select
			width 75% !important
	.postActivity_save, .postActivity_publish
		width 110px !important