.how_it_works
    .how_it_works_container
        background-color $white
        input
            display none
        input:checked + label
            font-weight $font-bold
        label
            cursor pointer
            line-height 50px
            margin-left 20px
        .how_it_works_group
            padding 20px 50px
            display none
            border-top 1px solid 
            +max-width(768px)
                padding 10px
        .how_it_works_footer
            text-align center
            margin 20px 0
            p
                font-size $font-size-sm
            button
                custom_button (standard sm)
                margin 20px 0
        input:nth-of-type(1):checked ~ .how_it_works_group:nth-of-type(1),
        input:nth-of-type(2):checked ~ .how_it_works_group:nth-of-type(2),
        input:nth-of-type(3):checked ~ .how_it_works_group:nth-of-type(3)
            display block
    .how_it_works_block
        font-size 0
        height 400px
        margin 20px 0
        padding 20px
        overflow: hidden;
        &:nth-of-type(even)
            .img
                float left
        .how_it_works_block_text
            font-size 1.5rem
            width 50%
            display inline-block
            vertical-align text-top
            padding 20px
            h1
                margin-top 0
        .img
            width 50%
            height 100%
            background-size cover
            background-position center
            background-repeat no-repeat
            display inline-block
            vertical-align text-top
        +max-width(768px)
            height auto
            padding 10px
            .how_it_works_block_text,
            .img
                margin-bottom 10px
                width 100%
                float none
            .img
                height 300px
    .how_it_works_list
        margin 40px auto
        li
            width 70%
            margin 0 auto
            border 1px solid $background-light-3
            overflow hidden
            &.open
                .how_it_works_list_header
                    background-color $background-light-3
                .how_it_works_list_text
                    background-color $background-light-1
                    padding 15px 20px
                    max-height 200px
            .how_it_works_list_header
                font-size $font-size-sm
                cursor pointer
                padding 15px 20px
                &:hover,
                &.open
                    background-color $background-light-3
            .how_it_works_list_text
                transition max-height .5s ease-in-out
                max-height 0
                
        +max-width(768px)
            li
                width 100%
			