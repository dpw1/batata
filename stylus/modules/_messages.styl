.messages
    background-color $white
    font-size 0
    padding 0!important
    position relative
    margin-bottom 40px
    .messages_aside
        vertical-align: top;
        display inline-block
        font-size initial
        width 30%
        height 500px
        border-right 1px solid $background-light-4
        .messages_aside_contact
            padding 15px
            border-bottom 1px solid $background-light-4
            img
                border-radius 50%
                border 3px solid $background-light-4
                width 55px
                display inline-block
                vertical-align: top;
            .messages_aside_contact_textblock
                display inline-block
                vertical-align: top;
                margin-left 10px
                font-size $font-size-xxs
                span
                    font-weight $font-bold
                p
                    color $text-color-light-1
                    line-height 20px
                small
                    color $text-color-dark-3
            time
                font-size $font-size-xxxs
                position absolute
                top 15px
                right 10px
                &.newTime
                    color $blue
            .newMessage
                height 10px
                width 10px
                border-radius 50%
                background-color $blue
                position absolute
                bottom 10px
                right 10px
    .messages_main
        display inline-block
        vertical-align: top;
        font-size initial
        width 70%
        position relative
        height 500px
        .messages_main_header
            line-height 50px
            padding 0 10px
            background-color $white-shade
            border-bottom 1px solid $background-light-3
            span
                color $blue
                font-weight $font-bold
                cursor pointer
            strong
                cursor pointer
            i
                position absolute
                display inline-block
                text-align center
                padding-top 8px
                height 40px
                width 30px
                right 10px
                top 11px
                z-index 2
                cursor pointer
                border-radius 8px 8px 0 0
                transition all .5s ease-in-out
                &:hover
                    border 1px solid lightgray
                    border-bottom 0
                    background-color $white
                    box-shadow 0 0 20px -8px rgba(0,0,0,.3)
            i:hover + ul
                max-height 300px
                box-shadow 0 0 10px rgba(0,0,0,.3)
                border 1px solid lightgray
            ul:hover
                max-height 300px
                box-shadow 0 0 10px rgba(0,0,0,.3)
                border 1px solid lightgray
            ul ~ i 
                border 1px solid lightgray
                border-bottom 0
                background-color $white
                box-shadow 0 0 20px -8px rgba(0,0,0,.3)
            ul
                position absolute
                max-height 0
                transition all .5s ease-in-out
                overflow hidden
                right 10px
                top 50px
                border-radius 8px 0 8px 8px
                background-color $white
                z-index 1
                li
                    line-height 20px
                    font-size $font-size-xxs
                    padding: 2px 15px;
                    margin: 5px 0;
                    box-sizing border-box
                    cursor pointer
                    &:hover
                        background-color $background-light-2
        .messages_main_window
            .message
                display block
                padding 10px
                width 40%
                margin 10px 20px
                border-radius 10px
                clear both
                color $white
                &.right
                    float right
                    background-color $blue
                &.left
                    float left
                    background-color $green
        .messages_main_footer
            width 100%
            background-color $background-light-4
            padding 10px
            position absolute
            bottom 0
            input
                line-height 50px
                width 100%
                padding-left 10px
                padding-right 50px
            i
                display block
                position absolute
                right 20px
                top 20px
                line-height 30px
                width 30px
                border-radius 50%
                background-color $blue
                color $white
                text-align center