.activityMain
    .card_big
        margin 0
        &:hover
            .card_big_front
                top 0
        .card_big_footer
            border-top 1px solid $background-light-2
            font-size 0
            line-height 16px
            p
                padding 8px 0
                display inline-block
                width 33%
                text-align center
                font-size $font-size-xs
                strong
                    font-size $font-size-sm
                &:not(:last-of-type)
                    border-right 1px solid $background-light-2
    .activityMain_card
        border 1px solid $background-light-2
        background-color $white
        margin-bottom 20px
        .activityMain_card_section
            padding 10px 20px
            border-bottom 1px solid $background-light-2
            &:after
                content ""
                display block
                clear both
            &:first-child
                padding 15px 20px
            &:last-child
                border-bottom none
            total
                font-weight $font-bold
                font-size $font-size-sm
            price
                font-weight $font-bold
                font-size $font-size-md
                float right
                bottom 3px
            button
                custom_button (standard md)
                width 100%
                clear right
            .popular
                background-color $yellow
                padding 2px 6px
                border-radius 10px
                color $white
                margin-left 5px
                font-size $font-size-xxxs
            > p
                margin 10px 0
            .link
                padding 5px 20px
                background-color $background-light-2
                cursor pointer
                i
                    transform matrix(-1, 0, 0, 1, 0, 0);
            h3
                display inline-block
            .rating
                position absolute
                right 20px
                top 50%
                transform translateY(-50%)
                display inline-block
                .starRating
                    right: 50px;
                currentRating
                    color $yellow
                    font-size $font-size-md
                    font-weight $font-bold
            .comment
                margin-top 10px
                padding-bottom 10px
                display inline-block
                width 100%
                right 0
                float right
                font-size 0
                &:first-child
                    margin-top 0
                &:not(:last-child)
                    border-bottom 2px solid $background-light-3
                .comment_profile
                    border-right 1px solid $background-light-3
                    width 30%
                    display inline-block
                    vertical-align top
                    font-weight $font-bold
                    font-size $font-size-xxs
                    &:after
                        content ""
                        display block
                        clear both
                    img
                        border-radius 4px
                        height 60px
                        float left
                    user
                        margin-left 10px
                        color $text-color-dark-2
                    span
                        display block
                        clear both
                        padding-top 5px
                        color $text-color-dark-2
                    fieldset
                        position: absolute;
                        bottom: -5px;
                        left: 45px;
                .comment_message
                    width 70%
                    height 80px
                    display inline-block
                    vertical-align top
                    padding 0 10px
                    p
                        color $text-color-dark-2
                        font-size $font-size-xs
                    .comment_answer
                        position absolute
                        bottom 0
                        left 10px
                        font-weight $font-bold
                        font-size $font-size-xxs
                        color $text-color-dark-3
                    .comment_time
                        position absolute
                        bottom 0
                        right 0
                        font-weight $font-bold
                        font-size $font-size-xxs
                        color $text-color-dark-3
            .answer
                width 90%
            .tag
                font-size $font-size-xxs
                display inline-block
                a
                    font-weight $font-bold
            .activity_title
                display block
                width 70%
                overflow hidden
            .pricingBlock_price
                position absolute
                right 80px
                top 50%
                transform translateY(-50%)
            .price_arrow
                position absolute
                right 20px
                top 50%
                transform translateY(-50%)
                font-size $font-size-md
                color $text-color-dark-3
                cursor pointer