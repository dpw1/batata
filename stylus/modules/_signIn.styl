/* VARIABLES - Variables used in this module.
========================================================================== */

$input-height = 33px
$input-padding = 5px
$color = $background-light-3

$hints-height = 245px
$margin-bottom = 15px




/* STYLE - General styling for this module.
========================================================================== */

.signIn
	margin-bottom 80px
	.signIn_title, .signIn_subtitle
		text-align center
	.signIn_subtitle
		margin-bottom 50px
	h3
		margin-bottom 20px
.signIn_form
	border-radius 3px
	background white
	width 100%
	padding-left 20px
	padding-top 10px
	margin-bottom $margin-bottom
.signIn_inputBlock
	display inline-block
	margin-bottom $margin-bottom

	position relative
	label
		display block
		width 100%
		font-weight $font-bold
		color $text-color-dark-3
	input, select
		line-height $input-height
	input, textarea, select
		width 90%
		height $input-height
		padding-left $input-padding
		border 1px solid $background-light-3
		margin-right 5px
	textarea
		height $input-height * 4
		resize none
	select
		width 89,5%
	i
		position relative
		top 7px
		left 5px
		font-size $font-size-lg
		color lightblue
		display inline-block

	&:nth-child(1), &:nth-child(5), &:nth-child(2)
		width 98%
	&:nth-child(3)
		width 98%
		label
			margin-bottom 10px
		i
			top -56px
	&:nth-child(4)
		width 98% !important
		label
			margin-bottom 10px

/* Post Activity Warnings */
.signIn_hints
	background $white
	border-radius 3px
	padding 15px 25px
	margin-bottom $margin-bottom

	h2
		margin-bottom 15px
	p
		margin-bottom 10px

	.signIn_hints_list
		li
			text-align justify
			margin-bottom 10px
			i
				margin-right 15px

.signIn_buttons
	margin-bottom 60px
	height auto
	background yellow
	width 100%
	position relative
	div
		position absolute
		right 0
		.signIn_save
			custom_button (reject sm)
			margin-right 15px
		.signIn_publish
			custom_button (standard sm)
		*
			width 120px
			float left

.--signIn_file
	label
		&:nth-child(1)
			margin-bottom 10px
		&:nth-child(2)
			cursor pointer
			width 90px
			height 90px
			position relative
			display block
			border 1px solid $background-light-3
			overflow hidden
			padding-top 32px
			text-align center
	input
		opacity 0
		position absolute
		width 100%
		height 100%
		cursor pointer
		top 0px

.--signIn_type
	display block
	.--signIn_type_block
		input
			display inline-block
			width 5%
			width 15px
			top 10px
		> label
			display inline-block
			width 94%
		> input:checked + label
			cursor default
		> input:nth-of-type(2):checked ~ .--signIn_location
			display block
		>.--signIn_location
			display none
			clear left
			.--signIn_location_block
				float left
				width 45%
				label
					width 90%
					display inline-block
					font-size $font-size-xxxs
				input:checked ~ .signIn_inputBlock
					display none
				>.signIn_inputBlock
					width 100%
					input
						width 83%
					i
						top 17px

.signIn_inputBlock_checkbox
	margin-left 3px
	margin-right 40px
	display inline-block !important
	float left !important
	*
		display inline-block !important
		width auto !important
	> label
		font-size $font-size-xxs
		font-weight $font-normal
		top -2px
	> input
		height 15px

.signIn_paypal
	> label
		margin-bottom 5px
.signIn_card
	.card_big
		margin 0
		&:hover
			.card_big_front
				top 0
		.card_big_footer
			border-top 1px solid $background-light-2
			font-size 0
			line-height 16px
			p
				padding 8px 0
				display inline-block
				width 33%
				text-align center
				font-size $font-size-xs
				strong
					font-size $font-size-sm
				&:not(:last-of-type)
					border-right 1px solid $background-light-2
.signIn_bottom
	margin-top 20px
	background lightblue
	.signIn_terms
		width 40%
		float left
		margin-right 75px
	.signIn_proceed
		float left
		custom_button (standard sm)

/* BREAKPOINTS - Customizations for each specific breakpoint.
========================================================================== */
+max-breakpoint(lg)
	.signIn_inputBlock
		&:nth-child(2)
			select
				width 89%
	.--signIn_location
		>.signIn_inputBlock
			input
				width 86% !important
+breakpoint(md)
	.signIn_inputBlock
		input, textarea, select
			width 87%

+max-breakpoint(md)
	.signIn_terms
		margin-right 20px !important
	.signIn_proceed
		float right !important

+max-breakpoint(xxs)
	.signIn_inputBlock
		width 100% !important
		> input, > textarea, > select
			width 90% !important
	.--signIn_location_block
		width 100% !important

+max-breakpoint(xxxs)
	.signIn_inputBlock
		> input, > textarea, >select
			width 75% !important
	.signIn_save, .signIn_publish
		width 110px !important

@media (min-width: 1025px) and (max-width: 1171px)
	.signIn_terms
		margin-right 25px !important

@media (min-width: 993px) and (max-width: 1024px)
	.signIn_terms
		margin-right 130px !important
