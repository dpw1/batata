.sidebar_category_content
    color $text-color-content
    padding-left $category-content-padding-left 
    padding-top $content-top-padding
	input
		outline 0
		border 0
	select
		border 0
	
.sidebar_category_checkbox_wrapper
    display block
    margin-left $category-content-padding-left 
    label
        color $text-color-content
        
.sidebar_search
    width 73px
    margin 0 auto
    margin-top 10px
    custom_button (reject sm)
	
/* --------------------------------- */
.sidebar
	input[type='checkbox']
		display none
	label
		cursor pointer
		
.sidebar_category_content, .sidebar_category_checkbox
	padding-top $content-top-padding
	overflow: hidden;
	height: 0;

.sidebar_category_checkbox input
	display inline-block !important
	
.sidebar_category input:checked ~ .sidebar_category_content
	height: auto
	
.sidebar_category input:checked ~ .sidebar_category_checkbox
	height: auto

	
	
.sidebar_category_price
	input
		width 40px
		height $price-height
		line-height $price-height
		background $price-background
		text-align center
	*
		display inline-block
		
.sidebar_checkbox_all
	margin 10px 0 
	width 100%
	text-align center
	a
		font-size $font-size-xxxs
		&:hover
			text-decoration underline !important


/* HELPERS - Classes for very specific rules.
========================================================================== */

.--noIconPadding
    margin-left 18px
    i
        margin-top -2px
        
.--spanText
    font-weight $font-normal
    color $text-color-content
	
/* BREAKPOINTS - Customizations for each specific breakpoint.
========================================================================== */

+max-breakpoint(md)	
	.sidebar
		display none