/* VARIABLES - Variables used in this module.
========================================================================== */

$content-background = $white
$content-top-padding = 10px;
$border-radius = 2px
$header-background = $background-light-1
$header-height = 48px
$category-header-height = 30px
$category-header-padding-left = 15px
$category-content-padding-left = ($category-header-padding-left * 2) + 2px

$text-color-header = $text-color-light-1
$text-color-content = $text-color-dark-1
$icon-color = $text-color-dark-1

$price-height = 30px
$price-background = $background-light-4

/* STYLE - General styling for this module.
========================================================================== */

.sidebar
    width 200px
	min-width 200px
    margin-left 0
    display inline-block
    border-bottom-left-radius $border-radius
    border-bottom-right-radius $border-radius
    
	
.sidebar_header
    background $header-background 
    border-top-left-radius $border-radius
    border-top-right-radius $border-radius
    height $header-height
    line-height $header-height
    border-bottom 1px solid $background-light-2 
    font-weight $font-bold
    color $text-color-dark-1
    padding-left 15px
	
.sidebar_clearFilter
	font-size $font-size-xxs
	position absolute
	z-index 1
	top 15px
	right 10px
	
.sidebar_category
    background $content-background
    padding 5px 0
    border-bottom 1px solid $background-light-1
	
.sidebar_category > label
	position relative
	width 100%

	display inline-block
	> i
		padding-left 15px
		font-size $font-size-xs
		color $icon-color
		&:last-child
			position absolute
			left 160px
			top 2px
			
.sidebar_category_content_review
	float left
