.searchBox
    background-color $background-dark-1
    margin 20px auto
    display inline-block
    padding 5px
    input
        border-radius 5px
        padding 8px 10px
        width 400px
        background-color $background-light-4
        display inline-block
        &::-webkit-input-placeholder
            color $text-color-dark-1
        &:-moz-placeholder
            color $text-color-dark-1
    button
        custom_button (accept sm)
        display inline-block
        height: 40px;
        line-height: 40px;
        padding 0 30px