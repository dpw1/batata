.card_big
    width 350px
    height 310px
    background-color $white
    margin 0 10px
    padding 5px
    border 1px solid $background-light-4
    border-radius 5px
    text-align center
    display inline-block
    overflow hidden
    +max-width(1170px)
        width 280px
    +max-width(1024px)
        width 100%
        margin 5px 0
    &:hover
        .card_big_front
            top 70px
    .card_big_back
        z-index 1
        position absolute
        text-align left
        padding 10px
        width 100%
        p
            font-weight $font-bold
            a
                color $blue
        span
            position absolute
            top 5px
            right 10px
            font-size $font-size-xxs
            &:first-letter
                font-size $font-size-xxs
    .card_big_front
            top 0
            width 100%
            transition top .2s ease-in-out
            z-index 2
        .card_big_cover
            width 100%
            height 130px
            background-size cover
            background-repeat no-repeat
            background-position center
        .profile_img
            margin-top -50px
            border-radius 50%
            width 100px
            border 3px solid $background-light-2
        .userName
            font-weight $font-bold
        small
            font-size $font-size-xxs
    .card_big_footer
        z-index 3
        line-height 50px
        position absolute
        bottom 0
        width 100%
        padding 0 10px
        left 0
        text-align left
        background-color $white
        *
            display inline-block
        .followers
            font-size $font-size-xs
            margin-left 10px
            margin-top 0px
        a
            color $orange;
            float right
            &:hover
                text-decoration underline
    ul
        text-align left
        margin-top 15px
        display none
        li
            border-top 1px solid $background-light-2
            padding 5px 10px
            height 45px
            &:first-child
                padding 10px
            p
                font-weight $font-bold
                font-size $font-size-xxs
            small
                top -5px
            .pricingBlock_price
                position absolute
                right 30px
                top 10px
                font-size $font-size-xs
            i
                position absolute
                right 10px
                top 15px
                font-size $font-size-xs
            .followers
                display inline-block
                font-size $font-size-xs
                left 5px
                top 1px
                span
                    font-size $font-size-xxs
                    font-weight $font-light
            a
                position absolute
                right 10px
                top 15px
                font-size $font-size-xxs