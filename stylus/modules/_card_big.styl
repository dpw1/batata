.card_big
    width 304px
    height 360px
    background-color $white
    margin 0 10px
    text-align center
    display inline-block
    &:first-of-type
        margin-left 0
    &:last-of-type
        margin-right 0
    .card_big_cover
        width 100%
        height 130px
        position absolute
        background-size cover
        background-repeat no-repeat
        background-position center
    > img
        margin-top 80px
        border-radius 50%
        width 30%
        border 3px solid $background-light-2
    .userName
        font-weight $font-bold
    small
        font-size $font-size-xxxxs
    ul
        text-align left
        margin-top 15px
        li
            border-top 1px solid $background-light-2
            padding 5px 10px
            height 45px
            &:first-child
                padding 10px
            p
                font-weight $font-bold
                font-size $font-size-xxs
            small
                top -5px
            .pricingBlock_price
                position absolute
                right 30px
                top 10px
                font-size $font-size-xs
            i
                position absolute
                right 10px
                top 15px
                font-size $font-size-xs
            .followers
                display inline-block
                font-size $font-size-xs
                left 5px
                top 1px
                span
                    font-size $font-size-xxs
                    font-weight $font-light
            a
                position absolute
                right 10px
                top 15px
                font-size $font-size-xxs