/* VARIABLES - Variables used in this module.
========================================================================== */

$header-height = 40px
$right = 65px;

$text-color-header = $text-color-light-1
$text-color-content = $text-color-dark-1
$icon-color = $text-color-dark-1

$header-font-size = $font-size-xs
$font-size = $font-size-xxs

$price-height = 30px
$price-background = $background-light-4

/* STYLE - General styling for this module.
========================================================================== */

.filter
	display none
	border 1px solid $text-color-dark-3
	border-radius 3px
	right $right
	background white
	position absolute
	max-width 200px
	width 200px
	z-index 5
	*
		font-size $font-size
		
.filter_block
	&:last-child
		margin-top 15px
		
.filter_wrapper
	width 170px
	margin 0 auto
	
.filter_block_header
	display inline-block
	height $header-height
	line-height $header-height
	*
		display inline-block
		
.filter_block_content
	height $header-height
	line-height $header-height
	input
		outline 0
	> .starRatingClick
		margin-top -10px
		margin-bottom -100px
		margin-left -15px
		*
			font-size $font-size-md
	*
		font-weight $font-normal
		
	>.filter_block_content_checkbox
		margin-top -20px
		&:last-child
			padding-bottom 20px
		*
			display inline
		
.filter_block_price
	margin-bottom 20px
	input
		width 40px
		height $price-height
		line-height $price-height
		background $price-background
		text-align center
	*
		display inline-block
		
.filter_button
	margin-bottom 70px
	
	.filter_button_search
		float left
		custom_button (reject sm)
	.filter_button_close
		custom_button (deny sm)
		float right
	*
		display inline-block
		width 70px

/* BREAKPOINTS - Customizations for each specific breakpoint.
========================================================================== */

+breakpoint(lg)
	.activity_header_filter
		display none
+breakpoint(md)
	.activity_header_filter
		display none

+max-breakpoint(xxxs)
	.filter
		right 15px