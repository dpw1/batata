/* Base for label.customCheckbox styling */
input.customCheckbox:not(:checked),
input.customCheckbox:checked {
  position: absolute;
  left: -9999px;
}
input.customCheckbox:not(:checked) + label.customCheckbox,
input.customCheckbox:checked + label.customCheckbox {
  position: relative;
  padding-left: 25px;
  cursor: pointer;
}

/* checkbox aspect */
input.customCheckbox:not(:checked) + label.customCheckbox:before,
input.customCheckbox:checked + label.customCheckbox:before {
  content: '';
  position: absolute;
  left:0; top: 2px;
  width: 17px; height: 17px;
  border: 1px solid #aaa;
  background: #f8f8f8;
  border-radius: 3px;
  box-shadow: inset 0 1px 3px rgba(0,0,0,.3)
}
/* checked mark aspect */
input.customCheckbox:not(:checked) + label.customCheckbox:after,
input.customCheckbox:checked + label.customCheckbox:after {
  content: 'âœ”';
  position: absolute;
  top: 3px; left: 4px;
  font-size: 18px;
  line-height: 0.8;
  color: #09ad7e;
  transition: all .2s;
}
/* checked mark aspect changes */
input.customCheckbox:not(:checked) + label.customCheckbox:after {
  opacity: 0;
  transform: scale(0);
}
input.customCheckbox:checked + label.customCheckbox:after {
  opacity: 1;
  transform: scale(1);
}
/* disabled checkbox */
input.customCheckbox:disabled:not(:checked) + label.customCheckbox:before,
input.customCheckbox:disabled:checked + label.customCheckbox:before {
  box-shadow: none;
  border-color: #bbb;
  background-color: #ddd;
}
input.customCheckbox:disabled:checked + label.customCheckbox:after {
  color: #999;
}
input.customCheckbox:disabled + label.customCheckbox {
  color: #aaa;
}
/* accessibility */
input.customCheckbox:checked:focus + label.customCheckbox:before,
input.customCheckbox:not(:checked):focus + label.customCheckbox:before {
  border: 1px dotted blue;
}

/* hover style just for information */
label.customCheckbox:hover:before {
  border: 1px solid #4778d9!important;
}