.contactUs
    margin-bottom 100px
    +max-width(768px)
        margin-bottom 20px
    .contactUs-header
        text-align center
        width 50%
        margin 40px auto
        h2
            margin 10px 0
    .contactUs-form
        background-color $white
        border-radius 10px
        padding 20px 10px
        box-shadow 0 0 10px rgba(0,0,0,.5)
        &:after
            display block
            content ""
            clear both
        +max-width(768px)
            margin 0 15px
        label,
        input,
        select,
        textarea
            display block
            font-weight $font-bold
            color $text-color-dark-2
        label
            margin-bottom 5px
        input,
        select,
        textarea
            margin-bottom 10px
            box-shadow inset 0 0 2px 2px rgba(0,0,0,.1)
            border 1px solid lightgray
            background-color $white
            border-radius 5px
            padding 10px
            font-size $font-size-xxxs
        label,
        input[type=text],
        select
            width 60%
        textarea
            width 100%
        input[type=submit]
            float right
            padding 5px 10px
        img
            float right
            +max-width(512px)
                width 35%
    .contactUs_aside
        margin 20px 0
        padding 0 40px
        h3
            margin-bottom 5px
            color $text-color-dark-2
            &:not(:first-of-type)
                margin-top 30px
        a
            color $orange