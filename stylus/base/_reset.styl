* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    list-style: none;
    position: relative;
}

a{ 
    text-decoration: none;
    color: inherit;
    &:hover, &:focus{
        color none;
        text-decoration: none !important;
    }
}
h1
    line-height: 35px;

button{
    border none
    background none
}

html,
body {
    height: 100%;
}

